<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/button_select_all"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Booking"
            android:textSize="80px"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Add Booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_add_booking" 
            android:layout_alignParentLeft="true" />

        <TextView
            android:text="Reminding"
            android:textSize="80px"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="Select All"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_select_all" 
                    android:layout_alignParentLeft="true" />
                <Button
                    android:text="Select None"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_select_none" 
                    android:layout_alignParentLeft="true" />
            </LinearLayout>
            <Button
                android:text="Send Selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_send_selected" 
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawSelectorOnTop="false"
            android:layout_toLeftOf="@id/button_select_all"
            android:id="@+id/listview_reminders">
        </ListView>
    </LinearLayout>
</RelativeLayout>